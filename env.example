# IPFS Configuration
# Choose your preferred IPFS provider: nftstorage, pinata, or local
IPFS_PROVIDER=nftstorage

# Pinata Configuration (if using Pinata)
# Get your JWT token from: https://app.pinata.cloud/developers/api-keys
PINATA_API_KEY=your_pinata_jwt_token_here

# nft.storage Configuration (if using nft.storage)
# Get your API token from: https://nft.storage/
NFT_STORAGE_TOKEN=your_nft_storage_api_token_here

# Discord Webhook (for notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url
DISCORD_TITLE=XO Vault Update
DISCORD_IMAGE_URL=https://your-image-url.com/image.png

# Telegram Bot Configuration (for notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id
TELEGRAM_THREAD_ID=your_thread_id
TELEGRAM_FILE_URL=https://your-file-url.com/file.pdf

# XO System Configuration
XO_LINK_URL=https://xo.to

# Git Configuration (for webhooks)
GIT_COMMIT_SHA=local

# Development Configuration
DEBUG=true
LOG_LEVEL=INFO 