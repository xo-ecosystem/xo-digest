{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "hardhat"
        ]
    },
    "include": [
        "hardhat.config.ts",
        "scripts/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
