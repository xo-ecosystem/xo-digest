{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run XO Core App",
      "type": "shell",
      "command": "uvicorn xo_core.main:app --reload --port 8001",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "XO Dev Cleanup",
      "type": "shell",
      "command": "./scripts/dev_cleanup.sh",
      "group": "none"
    },
    {
      "label": "Run Tests (pytest)",
      "type": "shell",
      "command": "pytest tests/",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Lint (ruff)",
      "type": "shell",
      "command": "ruff check .",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
